<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEEFA"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewScrollView"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="마지막 수유"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="마지막 낮잠"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/last_nursing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="마지막 수유"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/last_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="마지막 낮잠"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <ExpandableListView

            android:id="@+id/mylist"

            android:layout_width="match_parent"

            android:layout_height="match_parent">


        </ExpandableListView>
    </LinearLayout>

    <HorizontalScrollViewScrollView
        android:id="@+id/horizontalScrollViewScrollView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/recode_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/left" />

            <ImageButton
                android:id="@+id/nursing_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/nursing" />

            <ImageButton
                android:id="@+id/babyfood_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/babyfood" />

            <ImageButton
                android:id="@+id/sleep_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/sleep" />

            <ImageButton
                android:id="@+id/powderedmilk_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/powderedmilk" />

            <ImageButton
                android:id="@+id/bowel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/bowel" />

            <ImageView
                android:id="@+id/rightButton"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recode_b"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#EAEEFA"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftButton2"
                android:layout_width="05dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/left" />

            <ImageButton
                android:id="@+id/dosage_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/dosage" />

            <ImageButton
                android:id="@+id/temperature_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/temperature" />

            <ImageButton
                android:id="@+id/bath_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/bath" />

            <ImageButton
                android:id="@+id/health_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/health" />

            <ImageButton
                android:id="@+id/play_btn"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/rightButton2"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#EAEEFA"
                android:src="@drawable/right" />
        </LinearLayout>
    </HorizontalScrollViewScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>